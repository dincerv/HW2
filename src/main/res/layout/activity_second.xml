<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/txtGymExerciseName"
        android:layout_width="405dp"
        android:layout_height="47dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="26dp"
        android:text="@string/txtExerciseName"
        android:textAlignment="center"
        android:textColor="#FBB427"
        android:textColorHighlight="#FBB427"
        android:textColorHint="#FBB427"
        android:textColorLink="#FBB427"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtPlace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgMuseum"
        android:layout_width="357dp"
        android:layout_height="241dp"

        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="175dp"
        app:layout_constraintBottom_toTopOf="@+id/btnShow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPlace"
        app:srcCompat="@drawable/gym" />

    <TextView
        android:id="@+id/txtPlace"
        android:layout_width="403dp"
        android:layout_height="47dp"
        android:layout_marginBottom="55dp"
        android:text="@string/txtExerciseEquipment"
        android:textAlignment="center"
        android:textColor="#EAB137"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imgMuseum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGymExerciseName" />

    <Button
        android:id="@+id/btnShow"
        android:layout_width="220dp"
        android:layout_height="59dp"
        android:layout_marginBottom="54dp"
        android:text="@string/btnShow"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMuseum" />
</androidx.constraintlayout.widget.ConstraintLayout>